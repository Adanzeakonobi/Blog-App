<!DOCTYPE html>
<html>
  <head>
    <title>Blogapp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
  <% unless root_page? %>
      <div class="row-right"><%= button_to "Home", root_path, method: :get %></div>
    <% end %>
    <div class="row-right"><%= button_to "Logout", destroy_user_session_path, method: :delete, data: { turbo: false } %></div>
    <%= yield %>
  </body>
</html>
